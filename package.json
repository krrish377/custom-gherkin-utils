{
  "name": "custom-gherkin-utils",
  "version": "1.0.2",
  "description": "Custom utilities for processing Gherkin feature files",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist/tests dist/src && find dist -name \"*.d.ts.map\" -delete",
    "format:features": "npx prettier --write ./tests/**/*.feature",
    "test": "npm run format:features && node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config jest.config.cjs",
    "dev": "tsx src/index.ts",
    "build": "tsc && npm run clean",
    "start": "node dist/index.js",
    "postinstall": "patch-package"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.9.0 <=20.16.0",
    "npm": ">=9.0.0 <=10.8.2"
  },
  "keywords": [
    "gherkin",
    "cucumber",
    "feature files",
    "testing",
    "automation"
  ],
  "author": "Hari Krishna Chanumolu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/krrish377/custom-gherkin-utils.git"
  },
  "homepage": "https://github.com/krrish377/custom-gherkin-utils#readme",
  "dependencies": {
    "@cucumber/gherkin-streams": "^5.0.1",
    "@cucumber/messages": "^27.2.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "node-emoji": "^2.1.3",
    "patch-package": "^8.0.0",
    "prettier": "^3.5.2",
    "prettier-plugin-gherkin": "^3.1.1",
    "wdio-cucumber-parallel-execution": "^3.6.15"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
